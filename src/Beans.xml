<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id = "helloWorld" class = "com.tutorialspoint.HelloWorld" init-method="init" scope="prototype"
          destroy-method="destroy">
        <property name="message" value = "Hello World!"/>
    </bean>

    <bean id = "byeWorld" class = "com.tutorialspoint.ByeWorld" init-method="init" scope="prototype"
          destroy-method="destroy">
        <property name="message" value = "Bye World!"/>
    </bean>

    <bean id = "goodByeWorld" class = "com.tutorialspoint.GoodByeWorld" init-method="init" scope="prototype"
          destroy-method="destroy">
        <property name="message" value = "GoodBye World!"/>
    </bean>

    <bean class = "com.tutorialspoint.InitHelloWorld" />

</beans>